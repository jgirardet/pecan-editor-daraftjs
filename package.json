{
  "name": "pecan-editor",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "mocha": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha src",
    "mocha-watch": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha src --watch",
    "cyp": "cypress open-ct -b firefox",
    "cyp-run": "cypress run-ct",
    "eject": "react-scripts eject",
    "test-all": "npm-run-all -p cyp-run mocha"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@creativebulma/bulma-tooltip": "^1.2.0",
    "@draft-js-plugins/editor": "^4.1.0",
    "bulma": "^0.9.2",
    "classnames": "^2.3.1",
    "draft-js": "^0.11.7",
    "draft-js-custom-styles": "^2.1.1",
    "parse-color": "^1.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remixicon": "^2.5.0"
  },
  "devDependencies": {
    "@cypress/react": "^5.3.2",
    "@cypress/webpack-dev-server": "^1.1.1",
    "@types/chai": "^4.2.16",
    "@types/draft-js": "^0.11.1",
    "@types/mocha": "^8.2.2",
    "@types/node": "^12.0.0",
    "@types/parse-color": "^1.0.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "chai": "^4.3.4",
    "cypress": "^7.0.0",
    "mocha": "^8.3.2",
    "npm-run-all": "^4.1.5",
    "react-scripts": "4.0.3",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.2"
  }
}
